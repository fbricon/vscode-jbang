{
	"name": "jbang-vscode",
	"displayName": "JBang",
	"description": "JBang support for VS Code Java",
	"version": "0.0.1",
	"icon": "icons/jbang.png",
	"publisher": "jbangdev",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/jbangdev/jbang-eclipse"
	},
	"engines": {
		"vscode": "^1.65.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:java",
		"onCommand:jbang.script.generate"
	],
	"extensionDependencies": [
		"redhat.java"
	],
	"main": "./out/extension.js",
	"contributes": {
		"javaExtensions": [
			"./jars/dev.jbang.eclipse.core.jar",
			"./jars/dev.jbang.eclipse.ls.jar"
		],
		"commands": [
			{
				"command": "jbang.synchronize",
				"title": "Synchronize JBang",
				"category": "JBang",
				"icon": "icons/jbang.png"
			},
			{
				"command": "jbang.script.generate",
				"title": "Create a new script",
				"category": "JBang",
				"icon": "icons/jbang.png"
			}
		],
		"menus": {
			"commandPalette": [
				{
					"command": "jbang.synchronize",
					"when": "isJBangFile"
				}
			],
			"explorer/context": [
				{
					"command": "jbang.synchronize",
					"when": "isJBangFile",
					"group": "1_javaactions"
				}
			],
			"editor/context": [
				{
					"command": "jbang.synchronize",
					"when": "isJBangFile",
					"group": "1_javaactions"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"build-ext": "./node_modules/.bin/gulp buildExtension",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "1.65.0",
		"@types/glob": "7.2.0",
		"@types/mocha": "9.1.1",
		"@types/node": "14.18.22",
		"@typescript-eslint/eslint-plugin": "5.14.0",
		"@typescript-eslint/parser": "5.14.0",
		"eslint": "8.11.0",
		"glob": "7.2.0",
		"mocha": "9.2.2",
		"gulp": "4.0.2",
		"gulp-rename": "2.0.0",
		"typescript": "4.6.2",
		"@vscode/test-electron": "2.1.3"
	},
	"dependencies": {
		"vscode-languageclient": "^8.0.1"
	}
}
